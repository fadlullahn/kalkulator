<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FRActivity">

    <TextView
        android:id="@+id/textViewTitleFR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feed Rate (FR) Calculator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextTotalFeedFR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Total Feed (kg)"
        android:inputType="numberDecimal"
        android:layout_below="@id/textViewTitleFR"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/editTextDaysFR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number of Days"
        android:inputType="number"
        android:layout_below="@id/editTextTotalFeedFR"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnCalculateFR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate FR"
        android:layout_below="@id/editTextDaysFR"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewFRResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FR Result: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/btnCalculateFR"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
